<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BelajarBahasaInggris" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item> <!-- Primary color -->
        <item name="colorPrimaryVariant">@color/my_light_primary_variant</item> <!-- Primary variant color -->
        <item name="colorAccent">@color/my_light_accent</item> <!-- Accent color -->
        <item name="android:windowBackground">@color/my_light_background</item> <!-- Window background color -->
        <item name="android:textColorPrimary">@color/my_light_text_primary</item> <!-- Text color primary -->
        <item name="android:textColorSecondary">@color/my_light_text_secondary</item> <!-- Text color secondary -->
        <item name="toolbarTextColor">@color/my_light_toolbar_text_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarSize">?android:attr/actionBarSize</item>
        <item name="colorControlActivated">#3F51B5</item>
        <item name="colorControlHighlight">#E91E1E</item>
        <!-- Add more customizations here -->
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.BelajarBahasaInggris" parent="Base.Theme.BelajarBahasaInggris" />

    <style name="Theme.BelajarBahasaInggris.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BelajarBahasaInggris.AppBarOverlay" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="Theme.BelajarBahasaInggris.PopupOverlay" parent="Theme.AppCompat.DayNight.NoActionBar" />
</resources>