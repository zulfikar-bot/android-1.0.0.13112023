<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Kalkulator">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/dayxdark"
                android:layout_width="124dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:checked="false"
                android:text="@string/dark_mode"
                app:showText="false"
                android:thumbTint="@color/colorPrimary"
                android:trackTint="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow>
                        <Button android:id="@+id/button1" android:text="1" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/button2" android:text="2" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/button3" android:text="3" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/buttonAdd" android:text="+" style="@style/Widget.AppCompat.Button.Borderless"/>
                    </TableRow>

                    <TableRow>
                        <Button android:id="@+id/button4" android:text="4" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/button5" android:text="5" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/button6" android:text="6" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/buttonSubtract" android:text="-" style="@style/Widget.AppCompat.Button.Borderless"/>
                    </TableRow>

                    <TableRow>
                        <Button android:id="@+id/button7" android:text="7" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/button8" android:text="8" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/button9" android:text="9" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/buttonMultiply" android:text="*" style="@style/Widget.AppCompat.Button.Borderless"/>
                    </TableRow>

                    <TableRow>
                        <Button android:id="@+id/button0" android:text="0" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/buttonDecimal" android:text="." style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/buttonEquals" android:text="=" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <Button android:id="@+id/buttonDivide" android:text="/" style="@style/Widget.AppCompat.Button.Borderless"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>